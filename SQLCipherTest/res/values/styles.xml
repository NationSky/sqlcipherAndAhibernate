<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="base_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_layout2" parent="base_layout">
        <item name="android:textColor">@color/c_543e26</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="spinner" parent="base_layout2">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/spinner_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">32dp</item>
    </style>

</resources>